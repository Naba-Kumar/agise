{{>userHeader}}

<form id="loginForm" action="/user/login/" method="POST" enctype="multipart/form-data">

  


    <div class="row">
        <div class="col-md-4">
            <div class="form-group first">
                <label for="lname">E-mail address *</label>
                <input type="text" class="form-control" placeholder="e.g. xyz@google.com" id="email" name="email">
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group first">
                <label for="fname" style="color: aliceblue;"> .</label>
                <input type="submit" name="submit" value="GetOTP" class="btn px-4 btn-primary mt-4" >
            </div>
        </div>

  

    </div>
    
    <div class="row">
        <div class="col-md-6 mt-2">
            <div class="form-group first">
                <label for="fname">password*</label>
                <input type="password" class="form-control" placeholder="*****" value="password" id="password" name="password">
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-md-6">
            <div class="form-group first">
                <label for="lname">Enter OTP *</label>
                <input type="text" class="form-control" placeholder="OTP" id="otp" name="otp">
            </div>
        </div>

    </div>





    <input type="submit" name="submit" value="login"  class="btn px-5 btn-primary mt-2">
    <a href="/forgot">Forgot Password</a>

</form>
{{>userFooter}}